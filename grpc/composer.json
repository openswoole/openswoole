{
    "name": "openswoole/grpc",
    "description": "OpenSwoole GRPC framework for building high performance services",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "OpenSwoole Group",
            "email": "hello@openswoole.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-openswoole": ">=22.0",
        "openswoole/core": "^22.0"
    },
    "require-dev": {
        "openswoole/ide-helper": "^22.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.6",
        "friendsofphp/php-cs-fixer": "^3.6"
    },
    "suggest": {
        "ext-openswoole": "*",
        "google/protobuf": "^3.21"
    },
    "autoload": {
        "psr-4": {
            "OpenSwoole\\GRPC\\": "src/"
        }
    },
    "repositories": [
        {
            "name": "openswoole/core",
            "type": "path",
            "url": "../core"
        }
    ],
    "scripts": {
        "test": [
            "psalm --no-cache"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
